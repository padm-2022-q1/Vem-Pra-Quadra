<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.match.MatchesFragment">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_container_matches"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chip_group_show_mode_selector" />

    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chip_group_show_mode_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:padding="16dp"
        app:singleSelection="true"
        app:selectionRequired="true">

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_matches_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/chip_matches_list_title"
            app:chipIcon="@drawable/ic_list"
            android:focusable="true"
            android:clickable="true" />

        <com.google.android.material.chip.Chip
            android:id="@+id/chip_matches_map"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/chip_matches_map_title"
            app:chipIcon="@drawable/ic_map"
            android:focusable="true"
            android:clickable="true" />

    </com.google.android.material.chip.ChipGroup>

</androidx.constraintlayout.widget.ConstraintLayout>