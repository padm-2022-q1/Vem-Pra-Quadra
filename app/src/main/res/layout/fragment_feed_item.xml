<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.item.FeedItemFragment"
    android:padding="12dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_feed_item_profile_pic"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="60dp"
        android:padding="10dp">

        <ImageView
            android:id="@+id/image_feed_item_profile_pic"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/ic_profile_pic_default"
            android:contentDescription="@string/text_profile_pic_default_description" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/text_feed_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/card_feed_item_profile_pic"
        app:layout_constraintStart_toEndOf="@id/card_feed_item_profile_pic"
        android:layout_marginStart="16dp"
        android:text="@string/feed_item_title_default" />

    <TextView
        android:id="@+id/text_feed_item_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_feed_item_title"
        app:layout_constraintStart_toEndOf="@id/card_feed_item_profile_pic"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/feed_item_content_default"
        android:textSize="12sp"/>

    <ImageView
        android:id="@+id/image_feed_item_created_date_icon"
        android:layout_width="12sp"
        android:layout_height="12sp"
        app:layout_constraintTop_toTopOf="@id/text_feed_item_created_date"
        app:layout_constraintBottom_toBottomOf="@id/text_feed_item_created_date"
        app:layout_constraintEnd_toStartOf="@id/text_feed_item_created_date"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_feed_item_calendar"
        android:contentDescription="@string/feed_item_calendar_icon_description" />

    <TextView
        android:id="@+id/text_feed_item_created_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/text_feed_item_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:text="@string/feed_item_created_date_default"
        android:textSize="12sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>